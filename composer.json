{
    "name": "deg540/examen-tests-1abril",
    "description": "Examen tests 1 abril Kata cap. 9. Unit testing",
    "type": "project",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5.32",
        "php-vcr/php-vcr": "^1.3"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Deg540\\ExamenTests1Abril\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Deg540\\ExamenTests1Abril\\Test\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "test": [
            "parallel-lint . --exclude vendor",
            "phpunit --configuration phpunit.xml"
        ]
    }
}
